@using CMSProject.Utilities.Convertor
@model IEnumerable<CMSProject.DomainClass.Page.Page>

@{
    ViewData["Title"] = "Index";
}

<h2>لیست صفحات</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">افزودن خبر جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageVisit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="/pageImages/@item.ImageName" class="thumbnail" style="max-width: 120px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageTitle)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageVisit)
            </td>

            <td>
                @item.CreateDate.ToShamsi()
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.PageID" class="btn btn-warning">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.PageID" class="btn btn-info">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.PageID" class="btn btn-danger">حذف</a>
            </td>
        </tr>
        }
    </tbody>
</table>
